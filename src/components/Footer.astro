---
import { Image } from "astro:assets";

import * as footer from "../content/pages/home.md";
---

<div
    class="flex flex-wrap items-center justify-center w-screen pt-2 pb-1 bg-gradient-to-b from-background via-secondary to-secondary"
>
    <strong class="text-xs w-fit mr-1">Made with:</strong>
    {
        footer.frontmatter.tools.flatMap((tools: any) => (
            <a
                href={tools.link}
                target="_blank"
                class="flex justify-center w-fit"
            >
                <Image
                    src={tools.icon}
                    alt={tools.name}
                    class="h-3 rounded-none my-auto w-auto mr-1"
                    width={100}
                    height={100}
                />
                <strong class="text-xs mr-1">{tools.name}</strong>
            </a>
        ))
    }
</div>
