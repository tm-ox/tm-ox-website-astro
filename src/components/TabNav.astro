---
import { Icon } from "astro-icon";
---

<div class="tab-nav">
    <slot name="prev" />
    <div class="tab-nav-inner">
        <a href="/#home">
            <Icon name="ion:md-hand" class="icon" />
        </a>
        <a href="/#work">
            <Icon name="ion:document" class="icon" />
        </a>
        <a href="/#contact">
            <Icon name="ion:chatbubble-ellipses" class="icon" />
        </a>
    </div>
    <slot name="next" />
</div>

<style>
    .tab-nav {
        @apply fixed top-[calc(100%-80px)] mx-auto right-1/2 translate-x-1/2
        sm:sticky sm:top-[30px] sm:right-0 sm:mr-0 sm:translate-x-0
        flex gap-1 w-fit transition-all z-50;
    }
    .tab-nav-inner {
        @apply flex gap-3 sm:gap-2 bg-secondary rounded-full h-12 sm:h-9 px-4 sm:px-3 py-2 sm:py-1 shadow-md z-50;
    }
</style>
