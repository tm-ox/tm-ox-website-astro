---
const { direction, cls } = Astro.props;
---

<a
    slot="prev"
    href={direction}
    class={`${cls} bg-secondary rounded-full h-12 w-12 sm:h-9 sm:w-9 py-2 sm:py-1 shadow-md z-50`}
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="mx-2 sm:mx-1 text-background hover:text-primary"
    >
        <path
            d="M12 2C6.485 2 2 6.486 2 12s4.485 10 10 10c5.514 0 10-4.486 10-10S17.514 2 12 2zM7 14l5-6 5 6H7z"
        ></path>
    </svg>
</a>

<style>
    .left {
        @apply -rotate-90;
    }
    .right {
        @apply rotate-90;
    }
</style>
