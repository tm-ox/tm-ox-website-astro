---
import { getEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
import Layout from "../layouts/Layout.astro";
import TabNav from "../components/TabNav.astro";
import Contact from "../components/Contact.astro";
import Fade from "../components/Fade.astro";

const page = await getEntry("pages", "index");
const { Content } = await page.render();

const work = await getCollection("work");
work.sort((a, b) => Date.parse(a.data.order) - Date.parse(b.data.order));
---

<Layout title={page.data.title} description={page.data.description}>
  <!-- HI -->
  <section id="home">
    <p class="section-title">{page.data.sections[0]}</p>
    <a href="/#work" class="hover:text-primary mb-auto">
      <Fade origin="sm:origin-top-left">
        <Content />
      </Fade>
      <Icon name="ion:md-arrow-dropdown-circle" class="icon arrow mt-10" />
    </a>
  </section>
  <!-- WORK -->
  <TabNav class="sticky top-6 z-50" />
  <section id="work">
    <p class="section-title">{page.data.sections[1]}</p>
    <a href="/#home">
      <Icon name="ion:md-arrow-dropup-circle" class="icon arrow mb-5" />
    </a>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-3 lg:gap-4 mt-4"
    >
      {
        work.map((work) => (
          <Fade>
            <a href={`/work/${work.slug}`} class="rounded-md shadow-md">
              <Image
                src={work.data.cover.src}
                alt={work.data.cover.alt}
                class="rounded-b-none bg-secondary object-none aspect-video lg:aspect-square"
              />
              <div class="box">
                <strong>{work.data.client}</strong>
                {work.data.type}
              </div>
            </a>
          </Fade>
        ))
      }
    </div>
    <a href="/#contact" class="mb-auto">
      <Icon name="ion:md-arrow-dropdown-circle" class="icon arrow mt-10" />
    </a>
  </section>
  <!-- CONTACT -->
  <section id="contact">
    <p class="section-title">{page.data.sections[2]}</p>
    <a href="/#work">
      <Icon name="ion:md-arrow-dropup-circle" class="icon arrow mb-5" />
    </a>
    <div class="mb-auto">
      <Fade>
        <Contact />
      </Fade>
    </div>
  </section>
</Layout>
