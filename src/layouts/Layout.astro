---
import BaseHead from "../components/BaseHead.astro";
import Logo from "../components/Logo.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<html
  lang="en"
  class="tracking-wide bg-background text-primary font-jakarta scroll-smooth"
>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="overflow-x-hidden relative">
    <!-- Background -->
    <div
      class="fixed -bottom-[700px] right-0 w-[4000px] h-[4000px] border-8 border-primary rounded-full opacity-5 blur-sm animate-blob"
    >
    </div>
    <div
      class="fixed -bottom-[700px] right-12 w-[4000px] h-[4000px] border-8 border-hover rounded-full opacity-10 blur-sm animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="fixed -bottom-[700px] right-6 w-[4000px] h-[4000px] border-8 border-hover rounded-full opacity-20 blur-sm animate-blob animation-delay-4000"
    >
    </div>
    <!-- /Background -->
    <main class="w-[95%] max-w-screen-xl mx-auto mb-16">
      <header class="fixed top-[20px] sm:top-[30px] w-fit z-40">
        <a href="/"><Logo /></a>
      </header>
      <slot />
    </main>
    <footer
      class="flex flex-wrap gap-1 justify-center items-center pt-2 pb-1 w-screen bg-gradient-to-b from-background via-secondary to-secondary"
    >
      <Footer />
    </footer>
  </body>
</html>
