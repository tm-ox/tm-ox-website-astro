---
import BaseHead from "../components/BaseHead.astro";
import Logo from "../components/Logo.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<html lang="en" class="tracking-wide bg-background text-primary font-jakarta">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="overflow-x-hidden">
    <main class="w-[95%] max-w-screen-xl mx-auto mb-24">
      <header class="fixed top-[20px] sm:top-[30px] w-fit z-40">
        <a href="/"><Logo /></a>
      </header>
      <slot />
    </main>
    <footer
      class="flex flex-wrap gap-1 justify-center items-center pt-2 pb-1 w-screen bg-gradient-to-b from-background via-secondary to-secondary"
    >
      <Footer />
    </footer>
  </body>
</html>
